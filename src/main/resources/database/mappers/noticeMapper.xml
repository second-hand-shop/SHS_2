<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.shs.s1.board.notice.NoticeDAO">
    
    <!-- Notice List -->
    <select id="getList" resultType="NoticeDTO">
    	select * from notice
    </select>
    
    <!-- Notice Insert -->
    <insert id="setInsert" parameterType="NoticeDTO">
    	insert into notice values (notice_seq.nextval, #{title}, #{writer}, #{contents}, sysdate, 0)
    </insert>
    
    <!-- Notice Update -->
    <update id="setUpdate" parameterType="NoticeDTO">
    	update notice set title = #{title}, writer = #{writer}, contents = #{contents}, hit = #{hit}, regdate = sysdate 
    	where num = #{num}
    </update>
    
    
    <!-- Notice Delete -->
    <delete id="setDelete" parameterType="NoticeDTO">
    	delete notice where num = #{num}
    </delete>
    
    
    
    
</mapper>